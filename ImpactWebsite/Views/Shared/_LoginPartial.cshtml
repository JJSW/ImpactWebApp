@using Microsoft.AspNetCore.Identity
@using ImpactWebsite.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (User.IsInRole("Admin"))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right main-nav" style="margin-right:10px;">
            <li class="dropdown">
                <a class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" role="button" id="dropdownMenuButton"
                   aria-haspopup="true" aria-expanded="false">@UserManager.GetUserName(User)<span class="caret"></span></a>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <li>
                        <a class="dropdown-item nav-menu" asp-area="" asp-controller="Order" asp-action="Orders">Order</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="ApplicationUser" asp-action="Index">
                            <i class="fa fa-user" aria-hidden="true"></i> User
                        </a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="NewsletterUser" asp-action="Index">Newsletter User</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Module" asp-action="Index">Module</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Promotion" asp-action="Index">
                            <i class="fa fa-percent" aria-hidden="true"></i> Promotion
                        </a>
                    </li>
                    <li>
                        <button type="submit" class="btn navbar-btn" style="margin-left:20px; margin-top:10px">Log out</button>
                    </li>
                </ul>
            </li>
        </ul>
    </form>
}

else if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right main-nav" style="margin-right:10px;">
            <li class="dropdown">
                <a class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" role="button" id="dropdownMenuButton"
                   aria-haspopup="true" aria-expanded="false">@UserManager.GetUserName(User)<span class="caret"></span></a>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <li>
                        <a asp-controller="Billing" asp-action="PaymentHistory">Order Summary</a>
                    </li>
                    <li>
                        <a asp-controller="Billing" asp-action="Index">Billing Info</a>
                    </li>
                    <li>
                        <a asp-controller="Manage" asp-action="Index" title="Manage">
                            <i class="fa fa-user" aria-hidden="true"></i> User Profile
                        </a>
                    </li>
                    <li>
                        <button type="submit" class="btn navbar-btn" style="margin-left:20px; margin-top:10px">Log out</button>
                    </li>
                </ul>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right main-nav">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}
