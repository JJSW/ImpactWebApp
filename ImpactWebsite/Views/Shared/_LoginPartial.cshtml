@using Microsoft.AspNetCore.Identity
@using ImpactWebsite.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{ string strSpacer = "&nbsp;"; }

@if (User.IsInRole("Admin") || User.IsInRole("Manager"))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right main-nav-right">
            <li class="dropdown">
                <a class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" role="button" id="dropdownMenuButton"
                   aria-haspopup="true" aria-expanded="false">@UserManager.GetUserName(User)<span class="caret"></span></a>
                <ul class="dropdown-menu dropdown-menu dropdown-menu-usermenu pull-right" aria-labelledby="dropdownMenuButton">
                    <li>
                        <a asp-area="" asp-controller="OrderAdmin" asp-action="Index">
                            <i class="fa fa-list-ul" aria-hidden="true"></i>
                            @Html.Raw(strSpacer)Order
                        </a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="ApplicationUser" asp-action="Index">
                            <i class="fa fa-user" aria-hidden="true"></i>
                            @Html.Raw(strSpacer)User
                        </a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Module" asp-action="Index">
                            <i class="fa fa-check-square-o" aria-hidden="true"></i>
                            @Html.Raw(strSpacer)Module
                        </a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Saving" asp-action="Index">
                            <i class="fa fa-usd" aria-hidden="true"></i>
                            @Html.Raw(strSpacer)Saving
                        </a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Promotion" asp-action="Index">
                            <i class="fa fa-percent" aria-hidden="true"></i>
                            @Html.Raw(strSpacer)Promotion
                        </a>
                    </li>
                    <li>
                        <a href="javascript:{}" onclick="document.getElementById('logoutForm').submit(); return false;">
                            <i class="fa fa-sign-out" aria-hidden="true"></i>
                            @Html.Raw(strSpacer)Log Out
                        </a>
                    </li>
                </ul>
            </li>
        </ul>
    </form>
}

else if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right main-nav-right">
            <li class="dropdown">
                <a class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" role="button" id="dropdownMenuButton"
                   aria-haspopup="true" aria-expanded="false">
                    @UserManager.GetUserName(User)
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu dropdown-menu-usermenu pull-right" aria-labelledby="dropdownMenuButton">
                    <li>
                        <a asp-controller="Order" asp-action="Index">
                            <i class="fa fa-check-square-o" aria-hidden="true"></i>
                            @Html.Raw(strSpacer)Start New Order
                        </a>
                    </li>
                    <li>
                        <a asp-controller="OrderSummary" asp-action="Index">
                            <i class="fa fa-list-ul" aria-hidden="true"></i>
                            @Html.Raw(strSpacer)Order Summary
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Manage" asp-action="Index">
                            <i class="fa fa-user" aria-hidden="true"></i>
                            @Html.Raw(strSpacer)User Profile
                        </a>
                    </li>
                    <li>
                        <a href="javascript:{}" onclick="document.getElementById('logoutForm').submit(); return false;">
                            <i class="fa fa-sign-out" aria-hidden="true"></i>
                            @Html.Raw(strSpacer)Log Out
                        </a>
                    </li>
                </ul>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right main-nav-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}
