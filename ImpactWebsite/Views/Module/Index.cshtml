@model IEnumerable<ImpactWebsite.Models.OrderModels.Module>

@{
    ViewData["Title"] = "Index";
}

@{ string strSpacer = "&nbsp;&nbsp;"; }

<div class="admin-margin">

    <div class="page-heading">
        <ul class="breadcrumb">
            <li>
                <h3>
                    Admin
                </h3>
            </li>
            <li class="active">
                Module
            </li>
        </ul>
        <br />
        <a asp-action="Create" role="button" class="btn btn-default">
            <span class="fa fa-plus"></span>@Html.Raw(strSpacer)Create
        </a>
    </div>

    <section class="panel">
        <div class="adv-table">
            <table class="table" id="dynamic-table" style="table-layout:auto">
                <thead>
                    <tr>
                        <th style="min-width:3%">
                            ID
                        </th>
                        <th style="min-width:25%; width:auto;">
                            @Html.DisplayNameFor(model => model.ModuleName)
                        </th>
                        <th style="max-width:45%; word-wrap: break-word;">
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th style="min-width:7%;">
                            @Html.DisplayNameFor(model => model.UnitPrice)
                        </th>
                        <th style="min-width:20%;"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ModuleId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ModuleName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UnitPrice)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.ModuleId"
                                   class="btn btn-default btn-sm"
                                   role="button">
                                    <span class="fa fa-pencil-square-o"></span>@Html.Raw(strSpacer)Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.ModuleId"
                                   class="btn btn-default btn-sm"
                                   role="button">
                                    <span class="fa fa-info"></span>@Html.Raw(strSpacer)Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ModuleId"
                                   class="btn btn-default btn-sm"
                                   role="button">
                                    <span class="fa fa-times"></span>@Html.Raw(strSpacer)Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
</div>

@section scripts
{
    <!--dynamic table-->
    <script type="text/javascript" language="javascript" src="~/lib/datatables/media/js/jquery.dataTables.js"></script>
    <script type="text/javascript" language="javascript" src="~/lib/datatables/media/js/dataTables.bootstrap.js"></script>

    <!--dynamic table initialization -->
    <script type="text/javascript" src="~/js/dynamic_table_init_default.js"></script>
}