@model ImpactWebsite.Models.OrderModels.Module

@{
    ViewData["Title"] = "Delete";
}

@{ string strSpacer = "&nbsp;&nbsp;"; }

<div class="admin-margin">
    <div class="text-danger">
        <h3>Are you sure you want to delete this ?</h3>
    </div>
    <div class="page-heading">
        <h3>Module Details :@Html.Raw(strSpacer)@Html.DisplayFor(model => model.ModuleName)</h3>
    </div>

    <input type="hidden" asp-for="ModuleId" />

    <div>
        <dl class="dl-horizontal admin-margin-detail">

            <dt>
                @Html.DisplayNameFor(model => model.ModuleId)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ModuleId)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ModuleName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ModuleName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.UnitPrice.Price)
            </dd>
        </dl>

        <form asp-action="Delete">
            <a asp-action="Index" class="btn btn-default" role="button">
                <i class="fa fa-arrow-left" aria-hidden="true"></i>
                @Html.Raw(strSpacer)Back to list
            </a>

            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </div>
</div>
