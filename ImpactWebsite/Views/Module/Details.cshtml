@model ImpactWebsite.Models.OrderModels.Module

@{
    ViewData["Title"] = "Details";
}

@{ string strSpacer = "&nbsp;&nbsp;"; }

<div class="admin-margin">
    <div class="page-heading">
        <h3>Module Details :@Html.Raw(strSpacer)@Html.DisplayFor(model => model.ModuleName)</h3>
    </div>

    <div class="form-horizontal admin-margin-detail">

        <div class="form-group">
            <label asp-for="ModuleId" class="col-md-2 control-label"></label>
            <div class="col-md-10 admin-align-middle">
                @Html.DisplayFor(Model => Model.ModuleId)
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ModuleName" class="col-md-2 control-label"></label>
            <div class="col-md-10 admin-align-middle">
                @Html.DisplayFor(Model => Model.ModuleName)
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10 admin-align-middle">
                @Html.DisplayFor(Model => Model.Description)
            </div>
        </div>

        <div class="form-group">
            <label asp-for="UnitPrice" class="col-md-2 control-label"></label>
            <div class="col-md-10 admin-align-middle">
                $@Html.DisplayFor(Model => Model.UnitPrice)
            </div>
        </div>
    </div>

    <br/>
    <div>
        <a asp-action="Index" class="btn btn-default" role="button">
            <i class="fa fa-arrow-left" aria-hidden="true"></i>
            @Html.Raw(strSpacer)Back to list
        </a>
        <a asp-action="Edit" asp-route-id="@Model.ModuleId"
           role="button" class="btn btn-default">
            <span class="fa fa-pencil-square-o"></span>@Html.Raw(strSpacer)Edit
        </a>
    </div>
</div>
