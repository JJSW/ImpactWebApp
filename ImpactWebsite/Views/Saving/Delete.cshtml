@model ImpactWebsite.Models.OrderModels.Saving
@using ImpactWebsite.Models.OrderModels

@{
    ViewData["Title"] = "Delete";
}

@{ string strSpacer = "&nbsp;&nbsp;"; }

<div class="admin-margin">
    <div class="text-danger">
        <h3>Are you sure you want to delete this ?</h3>
    </div>
    <div class="page-heading">
        <h3>Saving Name :@Html.Raw(strSpacer)@Html.DisplayFor(model => model.SavingName)</h3>
    </div>

    <input type="hidden" asp-for="SavingId" />

    <div>
        <dl class="dl-horizontal admin-margin-detail">

            <dt>
                @Html.DisplayNameFor(model => model.SavingName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SavingName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.DiscountMethod)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DiscountMethod)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.SavingRate)
            </dt>
            <dd>
                @if (Model.DiscountMethod == SavingDiscountMethodList.Fixed)
                {
                    <td>
                        $@Html.DisplayFor(model => model.SavingRate)
                    </td>
                }
                else if (Model.DiscountMethod == SavingDiscountMethodList.Percentage)
                {
                    <td>
                        @Html.DisplayFor(model => model.SavingRate)%
                    </td>
                }
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.SelectFrom)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SelectFrom)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.SelectTo)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SelectTo)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.IsActive)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.IsActive)
            </dd>
        </dl>

        <form asp-action="Delete">
            <a asp-action="Index" class="btn btn-default" role="button">
                <i class="fa fa-arrow-left" aria-hidden="true"></i>
                @Html.Raw(strSpacer)Back to list
            </a>

            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </div>
</div>