@model ImpactWebsite.Models.OrderModels.Saving
@using ImpactWebsite.Models.OrderModels

@{
    ViewData["Title"] = "Delete";
}

@{ string strSpacer = "&nbsp;&nbsp;"; }

<div class="admin-margin">
    <div class="text-danger">
        <h3>Are you sure you want to delete this ?</h3>
    </div>
    <div class="page-heading">
        <h3>Saving Name :@Html.Raw(strSpacer)@Html.DisplayFor(model => model.SavingName)</h3>
    </div>

    <input type="hidden" asp-for="SavingId" />

    <div class="form-horizontal admin-margin-detail">

        <div class="form-group">
            <label asp-for="SavingName" class="col-md-2 control-label"></label>
            <div class="col-md-10 admin-align-middle">
                @Html.DisplayFor(Model => Model.SavingName)
            </div>
        </div>

        <div class="form-group">
            <label asp-for="DiscountMethod" class="col-md-2 control-label"></label>
            <div class="col-md-10 admin-align-middle">
                @Html.DisplayFor(Model => Model.DiscountMethod)
            </div>
        </div>

        <div class="form-group">
            <label asp-for="SavingRate" class="col-md-2 control-label"></label>
            <div class="col-md-10 admin-align-middle">
                @if (Model.DiscountMethod == SavingDiscountMethodList.Fixed)
                {
                    <span>
                        $@Html.DisplayFor(model => model.SavingRate)
                    </span>
                }
                else if (Model.DiscountMethod == SavingDiscountMethodList.Percentage)
                {
                    <span>
                        @Html.DisplayFor(model => model.SavingRate)%
                    </span>
                }
            </div>
        </div>

        <div class="form-group">
            <label asp-for="SelectFrom" class="col-md-2 control-label"></label>
            <div class="col-md-10 admin-align-middle">
                @Html.DisplayFor(Model => Model.SelectFrom)
            </div>
        </div>

        <div class="form-group">
            <label asp-for="SelectTo" class="col-md-2 control-label"></label>
            <div class="col-md-10 admin-align-middle">
                @Html.DisplayFor(Model => Model.SelectTo)
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10 admin-align-middle">
                @Html.DisplayFor(Model => Model.Description)
            </div>
        </div>

        <div class="form-group">
            <label asp-for="IsActive" class="col-md-2 control-label"></label>
            <div class="col-md-10 admin-align-middle">
                @Html.DisplayFor(Model => Model.IsActive)
            </div>
        </div>
    </div>

    <br />
    <div>
        <form asp-action="Delete">
            <a asp-action="Index" class="btn btn-default" role="button">
                <i class="fa fa-arrow-left" aria-hidden="true"></i>
                @Html.Raw(strSpacer)Back to list
            </a>

            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </div>
</div>