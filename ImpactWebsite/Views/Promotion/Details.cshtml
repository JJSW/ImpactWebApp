@model ImpactWebsite.Models.OrderModels.Promotion
@using ImpactWebsite.Models.OrderModels

@{
    ViewData["Title"] = "Details";
}

@{ string strSpacer = "&nbsp;&nbsp;"; }

<div class="admin-margin">
    <div class="page-heading">
        <h3>Module Details :@Html.Raw(strSpacer)@Html.DisplayFor(model => model.PromotionName)</h3>
    </div>

    <div>
        <dl class="dl-horizontal admin-margin-detail">
            <dt>
                @Html.DisplayNameFor(model => model.PromotionName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.PromotionName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.PromotionCode)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.PromotionCode)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.DiscountMethod)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DiscountMethod)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.DiscountRate)
            </dt>
            <dd>
                @if (Model.DiscountMethod == PromotionDiscountMethodList.Fixed)
                {
                    <td>
                        $@Html.DisplayFor(model => model.DiscountRate)
                    </td>
                }
                else if (Model.DiscountMethod == PromotionDiscountMethodList.Percentage)
                {
                    <td>
                        @Html.DisplayFor(model => model.DiscountRate)%
                    </td>
                }
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.DateFrom)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DateFrom)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.DateTo)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DateTo)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.IsActive)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.IsActive)
            </dd>

        </dl>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-default" role="button">
            <i class="fa fa-arrow-left" aria-hidden="true"></i>
            @Html.Raw(strSpacer)Back to list
        </a>
        <a asp-action="Edit" asp-route-id="@Model.PromotionId"
           role="button" class="btn btn-default">
            <span class="fa fa-pencil-square-o"></span>@Html.Raw(strSpacer)Edit
        </a>
    </div>
</div>
