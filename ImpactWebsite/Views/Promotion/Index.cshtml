@model IEnumerable<ImpactWebsite.Models.OrderModels.Promotion>
@using ImpactWebsite.Models.OrderModels

@{
    ViewData["Title"] = "Index";
}

@{ string strSpacer = "&nbsp;&nbsp;"; }

<div class="admin-margin">

    <div class="page-heading">
        <ul class="breadcrumb">
            <li>
                <h3>
                    Admin
                </h3>
            </li>
            <li class="active">
                Promotion
            </li>
        </ul>
        <br />
        <a asp-action="Create" role="button" class="btn btn-default">
            <span class="fa fa-plus"></span>@Html.Raw(strSpacer)Create
        </a>
    </div>

    <section class="panel">
        <div class="adv-table">
            <table class="table" id="dynamic-table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.PromotionId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PromotionName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PromotionCode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DiscountRate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DateFrom)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DateTo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsActive)
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.PromotionId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PromotionName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PromotionCode)
                            </td>
                            @if (item.DiscountMethod == DiscountMethodList.Fixed)
                {
                                <td>
                                    $@Html.DisplayFor(modelItem => item.DiscountRate)
                                </td>
                            }
                            else if (item.DiscountMethod == DiscountMethodList.Percentage)
                            {
                                <td>
                                    @Html.DisplayFor(modelItem => item.DiscountRate)%
                                </td>
                            }

                            <td>
                                @Html.DisplayFor(modelItem => item.DateFrom)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateTo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.PromotionId"
                                   class="btn btn-default btn-sm"
                                   role="button">
                                    <span class="fa fa-pencil-square-o"></span>@Html.Raw(strSpacer)Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.PromotionId"
                                   class="btn btn-default btn-sm"
                                   role="button">
                                    <span class="fa fa-info"></span>@Html.Raw(strSpacer)Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.PromotionId"
                                   class="btn btn-default btn-sm"
                                   role="button">
                                    <span class="fa fa-times"></span>@Html.Raw(strSpacer)Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
</div>

@section scripts
{
    <!--dynamic table-->
    <script type="text/javascript" language="javascript" src="~/lib/datatables/media/js/jquery.dataTables.js"></script>
    <script type="text/javascript" language="javascript" src="~/lib/datatables/media/js/dataTables.bootstrap.js"></script>

    <!--dynamic table initialization -->
    <script type="text/javascript" src="~/js/dynamic_table_init_default.js"></script>
}