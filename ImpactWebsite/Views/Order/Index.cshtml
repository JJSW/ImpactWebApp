@model IEnumerable<ImpactWebsite.Models.OrderModels.TempOrderViewModel>

@using Microsoft.AspNetCore.Identity
@using ImpactWebsite.Models

@{
    ViewData["Title"] = "Order";
    IFormatProvider fp = new System.Globalization.CultureInfo("en-CA");
}

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{ string strSpacer = "&nbsp;&nbsp;"; }

<!-- page heading start-->
<div class="page-heading">
    <h3>
        Select modules
    </h3>
    <ul class="breadcrumb">
        <li>
            Analysis
        </li>
        <li class="active">Choose modules</li>
    </ul>
</div>

<form action="/Order/NewOrder" method="post">

    <div class="wrapper">
        <div class="row">
            <div class="col-sm-12">
                <section class="panel">
                    <header class="panel-heading">
                        Summary of modules
                        <span class="tools pull-right">
                            <a href="javascript:;" class="fa fa-chevron-down"></a>
                        </span>
                    </header>

                    <div class="panel-body">
                        <table class="table table-hover general-table">
                            <thead>
                                <tr>
                                    <th class="col-md-0">
                                        #
                                    </th>
                                    <th class="col-md-5">
                                        @Html.DisplayNameFor(model => model.Modules.ModuleName)
                                    </th>
                                    <th class="col-md-2">
                                        Module Detail
                                    </th>
                                    <th class="col-md-2">
                                        @Html.DisplayNameFor(model => model.Modules.UnitPrice)
                                    </th>
                                    <th class="col-md-1">
                                        Select
                                    </th>
                                    <th class="col-md-2"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Count(); i++)
                                {
                                    <tr>
                                        <td>@Model.ElementAt(@i).Modules.ModuleId</td>
                                        <td>
                                            <label asp-for="@Model.ElementAt(@i).IsChecked" style="font-weight:normal;">
                                                @Model.ElementAt(@i).Modules.ModuleName
                                            </label>
                                        </td>
                                        <td>
                                            <a style="cursor:pointer"
                                               class="Detail"
                                               value="@Model.ElementAt(@i).Modules.ModuleId"
                                               name="@Model.ElementAt(@i).Modules.ModuleName">
                                                <i class="fa fa-info-circle" aria-hidden="true"></i>
                                                Details
                                            </a>
                                        </td>
                                        <td>
                                            <label asp-for="@Model.ElementAt(@i).IsChecked" style="font-weight:normal;">
                                                @Model.ElementAt(@i).Modules.UnitPrice.Price.ToString("C0", fp)
                                            </label>
                                        </td>
                                        <td>
                                            <div class="flat-blue single-row">
                                                <div class="radio _margin-top-0 _margin-bottom-0">
                                                    @if (@i == 0)
                                                    {
                                                        <input type="checkbox" checked="checked" disabled="disabled" value='@Html.Raw(Json.Serialize(Model.ElementAt(@i)))' />
                                                        <input type="hidden" name="modules" value='@Html.Raw(Json.Serialize(Model.ElementAt(@i)))' />
                                                    }
                                                    else
                                                    {
                                                        <input type="checkbox" name="modules" class="chkBox" value='@Html.Raw(Json.Serialize(Model.ElementAt(@i)))' />
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                        <td><span class="label label-info label-mini">New</span></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>

                </section>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <section class="panel">
                    <div class="panel-body">
                        <table class="table table-hover general-table">
                            <thead>
                                <tr>
                                    <th>Order total</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Total value</td>
                                    <td>
                                        <span name="totalPrice"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Saving</td>
                                    <td>
                                        <input type="hidden" name="selectionDiscount" value="0" style="width:50px; border:none;" />
                                        <span class="text-danger" name="selectionDiscountDisplay"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Total to pay</td>
                                    <td>
                                        <input type="hidden" name="totalAmountToPay" value="0" style="width:60px; border:none;" />
                                        <span name="totalAmountToPayDisplay"></span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </section>
            </div>

            <div class="col-md-6">
                <section class="panel">
                    <div class="panel-body">
                        Where shall we send your analysis?<br><br>
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <b><input class="form-control" type="email" required="required" name="email" value="@ViewData["Email"]" placeholder="Enter your email" /></b>
                        }
                        else
                        {
                            <input class="form-control" type="email" required="required" name="email" placeholder="Enter your email" />
                        }
                        <div class="form-group" style="margin-top:50px;">
                            <button type="submit" class="btn btn-primary _margin-top-32 _margin-bottom-32">Next step</button>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</form>

<div id="AddUserForm"></div>

@section scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <link href="~/lib/jquery-ui/themes/base/jquery-ui.css" rel="stylesheet" />

    <!--icheck-->
    <link href="~/lib/iCheck/skins/flat/blue.css" rel="stylesheet">
    <script src="~/js/icheck-init.js"></script>
    <script src="~/lib/iCheck/icheck.js" type="text/javascript"></script>

    <script type="text/javascript">

        $(document).ready(function () {
            $('input').on('ifChanged', function () {
                calculateTotal();
            });
        });

        function calculateTotal() {
            totalPrice = 0;
            selectionDiscount = 0;
            totalAmountToPay = 0;

            $(':checkbox:checked.chkBox').each(function () {
                var jsonObj = JSON.parse($(this).val());
                console.log($(this).val());
                totalPrice += +jsonObj.modules.unitPrice.price;
            });

            var selectedModules = $(':checkbox:checked').length;

            if (selectedModules >= '@ViewBag.D1SelectFrom' && selectedModules <= '@ViewBag.D1SelectTo' ) {
                selectionDiscount = '@ViewBag.D1DiscountRate';
            } else if (selectedModules >= '@ViewBag.D1SelectTo' && selectedModules <= '@ViewBag.D2SelectTo') {
                selectionDiscount = '@ViewBag.D2DiscountRate';
            }

            $('span[name=totalPrice]').text('$' + totalPrice);

            $('input[name=selectionDiscount]').val(selectionDiscount);

            if (selectionDiscount != null || selectionDiscount != 0) {
                $('span[name=selectionDiscountDisplay]').text('-$' + selectionDiscount);
            }

            totalAmountToPay = (totalPrice - selectionDiscount);

            $('input[name=totalAmountToPay]').val(totalAmountToPay);

            if (totalAmountToPay != null || totalAmountToPay != 0) {
                $('span[name=totalAmountToPayDisplay]').text('$' + totalAmountToPay);
            }
        }


    </script>

    <script type="text/javascript">
         var idNum;
         $('.Detail').on('click', function () {

             var idNum = $(this).attr('value');
             var link = '@Url.Action("ModuleDescription", "Order", new { id = "-1" })';
             var strTitle = $(this).attr('name');

             link = link.replace("-1", idNum);

             $("#AddUserForm").dialog({
             type: 'GET',
             autoOpen: true,
             position: { my: "top", at: "top+150", of: window },
             width: 600,
             height: 200,
             resizable: false,
             title: strTitle,
             modal: true,
             open: function () {
                 $(this).load(link);
             },
             });
             return false;
         });
    </script>
}
