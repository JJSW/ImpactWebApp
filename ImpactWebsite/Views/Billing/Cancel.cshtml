@model IEnumerable<ImpactWebsite.Models.OrderModels.Order>

@{
    ViewData["Title"] = "Order Cancel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ string strSpacer = "&nbsp;&nbsp;"; }

<div class="col-md-10 col-md-offset-2">
    <div class="page-heading">
        <h3>
            Order Canceled
        </h3>
        <ul class="breadcrumb">
            <li>
                Payment
            </li>
            <li class="active">Order Canceled</li>
        </ul>
    </div>
    <div class="wrapper">
        <div class="row">
            <div class="col-sm-10">
                <section class="panel">
                    <div class="panel-body">
                        <table class="table table-hover general-table orderDetailTable">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.OrderNum)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.OrderedDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TotalAmount)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.OrderStatus)
                                </th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                var totalAmountDollar = item.TotalAmount / 100;
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OrderNum)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OrderedDate)
                                    </td>
                                    <td>
                                        $@totalAmountDollar
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OrderStatus)
                                    </td>
                                </tr>
                            }
                        </table>

                        <a asp-controller="OrderSummary"
                           asp-action="Index"
                           class="btn btn-primary" role="button">
                            <i class="fa fa-arrow-left" aria-hidden="true"></i>
                            @Html.Raw(strSpacer)Back to list
                        </a>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>
