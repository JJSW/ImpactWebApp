@model ImpactWebsite.Models.AccountViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Create User";
}

@{ string strSpacer = "&nbsp;&nbsp;"; }

<form asp-action="Create">
    <div class="admin-margin">
        <div class="page-heading">
            <h3>Create User</h3>
        </div>

        <div class="form-horizontal admin-margin-detail">

            <div class="form-group">
                <label asp-for="Email" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger validation-align-middle"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger validation-align-middle"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger validation-align-middle"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CompanyName" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="CompanyName" class="form-control" />
                    <span asp-validation-for="CompanyName" class="text-danger validation-align-middle"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Password" type="password" placeholder="Password" class="form-control">
                    <span asp-validation-for="Password" class="text-danger validation-align-middle"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="ConfirmPassword" type="password" placeholder="Re-type Password" class="form-control">
                    <span asp-validation-for="ConfirmPassword" class="text-danger validation-align-middle"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="IsTempUser" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="IsTempUser" class="form-control" />
                </div>
            </div>

            <br />
            <div class="col-md-2 control-label">
                <a asp-action="Index" class="btn btn-default" role="button">
                    <i class="fa fa-arrow-left" aria-hidden="true"></i>
                    @Html.Raw(strSpacer)Back to list
                </a>

                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
